<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Backend/etc/system_file.xsd">
    <system>
        <tab id="GssSocialLinks" translate="label" sortOrder="700">
            <label>Gss Social Links</label>
        </tab>        
        <section id="GssSocialLinks" translate="label" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Settings</label>
            <tab>GssSocialLinks</tab>
            <resource>Gss_SocialLinks::config</resource>
            <group id="gss_social_links" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">                
                <label>Social Links</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                   <label>Enable Social links</label>
                   <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                
                <field id="facebook" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Facebook Link</label>
                </field>

                <field id="twitter" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Twitter Link</label>
                </field>

                <field id="google_plus" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Google + Link</label>
                </field>
            </group>
        </section>
    </system>
</config>
